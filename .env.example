# PalaCMS Environment Variables
# Copy this file to .env and customize the values

# ===== Core PalaCMS Configuration =====

# Superuser credentials (for PocketBase admin access)
# These are optional and only used on first startup to create the initial admin user
PALA_SUPERUSER_EMAIL=admin@example.com
PALA_SUPERUSER_PASSWORD=changeme123

# PalaCMS user credentials
# These are optional and only used on first startup to create the initial PalaCMS user
PALA_USER_EMAIL=user@example.com
PALA_USER_PASSWORD=changeme123

# Version (optional)
PALA_VERSION=3.0.0-beta.1

# ===== Database Configuration =====

# Database type: sqlite (default), postgres, or mysql
DATABASE_TYPE=sqlite

# Database connection URL (required for postgres/mysql)
# PostgreSQL example: postgres://user:password@host:5432/dbname?sslmode=require
# MySQL example: mysql://user:password@host:3306/dbname
# DATABASE_URL=

# ===== AWS S3 Storage Configuration =====

# Enable AWS S3 for file storage (default: false)
AWS_S3_ENABLED=false

# S3 bucket name (required if S3 is enabled)
# AWS_S3_BUCKET=palacms-uploads

# AWS region (default: us-east-1)
# AWS_S3_REGION=us-east-1

# AWS credentials (optional if using IAM roles)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# S3 endpoint (optional, for S3-compatible services like MinIO)
# AWS_S3_ENDPOINT=

# Public URL for S3 files (optional, defaults to S3 bucket URL)
# AWS_S3_PUBLIC_URL=https://cdn.example.com

# ===== AWS SES Email Configuration =====

# Enable AWS SES for email delivery (default: false)
AWS_SES_ENABLED=false

# SES region (default: us-east-1)
# AWS_SES_REGION=us-east-1

# SES from address (required if SES is enabled)
# AWS_SES_FROM_ADDRESS=noreply@example.com

# SES credentials (optional if using IAM roles, defaults to AWS_ACCESS_KEY_ID/SECRET_ACCESS_KEY)
# AWS_SES_ACCESS_KEY_ID=
# AWS_SES_SECRET_ACCESS_KEY=

# ===== AWS CloudFront CDN Configuration =====

# Enable CloudFront CDN (default: false)
AWS_CLOUDFRONT_ENABLED=false

# CloudFront distribution ID
# AWS_CLOUDFRONT_DISTRIBUTION_ID=

# CloudFront domain
# AWS_CLOUDFRONT_DOMAIN=d123456789.cloudfront.net

# ===== AWS Cognito Authentication Configuration =====

# Enable AWS Cognito for authentication (default: false)
AWS_COGNITO_ENABLED=false

# Cognito User Pool ID (required if Cognito is enabled)
# AWS_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx

# Cognito App Client ID (required if Cognito is enabled)
# AWS_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Cognito App Client Secret (optional)
# AWS_COGNITO_CLIENT_SECRET=

# Cognito region (default: us-east-1)
# AWS_COGNITO_REGION=us-east-1

# Cognito credentials (optional if using IAM roles, defaults to AWS_ACCESS_KEY_ID/SECRET_ACCESS_KEY)
# AWS_COGNITO_ACCESS_KEY_ID=
# AWS_COGNITO_SECRET_ACCESS_KEY=
